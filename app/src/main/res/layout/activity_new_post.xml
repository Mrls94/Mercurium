<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_new_post"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.example.mbalza.mercurium.NewPost">

    <TextView
        android:text="Nuevo Post"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="11dp"
        android:id="@+id/textView"
        android:textSize="40sp" />

    <Button
        android:text="Subir Foto"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:id="@+id/UploadPictureBtn" />

    <Button
        android:text="Enviar Post"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_above="@+id/UploadPictureBtn"
        android:layout_alignLeft="@+id/UploadPictureBtn"
        android:layout_alignStart="@+id/UploadPictureBtn"
        android:layout_marginBottom="11dp"
        android:id="@+id/SendPostBtn" />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:inputType="textMultiLine"
        android:ems="10"
        android:id="@+id/editTextMsg"
        android:hint="Contenido del Post"
        android:layout_above="@+id/SendPostBtn"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"
        android:layout_below="@+id/postImage" />

    <ImageView
        android:layout_width="150px"
        app:srcCompat="@mipmap/ic_launcher"
        android:id="@+id/postImage"
        android:layout_below="@+id/textView"
        android:layout_height="200px"
        android:layout_alignLeft="@+id/SendPostBtn"
        android:layout_alignStart="@+id/SendPostBtn"
        android:layout_alignRight="@+id/SendPostBtn"
        android:layout_alignEnd="@+id/SendPostBtn" />

</RelativeLayout>
